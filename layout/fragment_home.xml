<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.edu.alliance.alliance.Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:onClick="news"
            android:background="@drawable/assocham"
            android:textSize="50sp"
            android:fontFamily="@font/neuropol_x_rg"
            />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@drawable/apl"
            android:textSize="50sp"
            android:fontFamily="@font/neuropol_x_rg"
            android:onClick="apl"
            />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@drawable/business"
            android:textSize="50sp"
            android:fontFamily="@font/neuropol_x_rg"
            android:onClick="business"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:text="News 4"
            android:textSize="50sp"
            android:fontFamily="@font/neuropol_x_rg"
            android:onClick="clicked"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:text="News 5"
            android:textSize="50sp"
            android:fontFamily="@font/neuropol_x_rg"
            android:onClick="clicked"
            />


    </LinearLayout>


</ScrollView>
